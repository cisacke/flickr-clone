<%= render partial: "layouts/navbar", :locals => {text: "sign in", link: new_session_url} %>

<div class="new-session-wrapper">
  <div class="new-session-background-img">
    <h1 class="new-session-header">
      pixie. photo uploading and sharing.
    </h1>

    <form class="new-user-form" action="<%= users_url %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <h5>sign up</h5>
      <input type="text" name="user[f_name]" placeholder="first name">
      <br>
      <input type="text" name="user[l_name]" placeholder="last name">
      <br>
      <input type="text" name="user[email]" placeholder="email">
      <br>
      <input type="password" name="user[password]" placeholder="password">
      <br>
      <button>sign up</button>
      <button><a href="/auth/facebook">sign up with Facebook</a></button>
    </form>

  </div>
</div>

<%= render partial: "layouts/footer" %>
