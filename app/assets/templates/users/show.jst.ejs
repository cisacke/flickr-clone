<img src="<%= user.escape("cover") %>" alt="cover photo" class="user-cover-pic"/>

  <li class="user-info group">
    <div class="user-profile-pic">
      <img src="<%= user.escape("avatar") %>" alt="user avatar" />
      <% if (edit) { %>
        <label class="custom-file-upload">
          edit
          <input type="file" name="user[avatar]" id="input-user-avatar"
                 class="change-avatar-button">
        </label>
      <%  } %>
    </div>
    <h3><%= user.escape("f_name") %> <%= user.escape("l_name") %></h3>
    <% if(!(user.id === Capstone.Models.currentUser.id)) { %>
      <h3 class="toggle-follow follow-button"></h3>
    <%  } %>
  </li>

  <li class="user-stats">
    <%= user.escape("num_photos") %>  <%= user.escape("num_photos") == 1 ? "photo" : "photos" %> | joined <%= user.escape("joined") %>
  </li>
  <% if (edit === true) { %>
    <div class="change-cover-photo group">
      <label class="custom-file-upload">
        Edit
        <input type="file" name="user[cover]" id="input-photo-image"
               class="change-cover-photo-button">
      </label>

    </div>
  <%  } %>
